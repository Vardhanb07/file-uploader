generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int         @id @default(autoincrement())
  name     String
  username String
  password String
  isAdmin  Boolean     @default(false)
  files    UserFile[]
  @@map("users")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model UserFile {
  id     Int    @id @default(autoincrement())
  path   String
  user   User   @relation(fields: [userId], references: [id])
  userId Int
  @@map("userfiles")
}
